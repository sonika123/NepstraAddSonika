<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true"
    >
    >
    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            tools:context="pratikthapa.example.com.nepstrademo.LoginActivity"
            tools:layout_editor_absoluteY="0dp"
            tools:layout_editor_absoluteX="8dp"
            >


            <ImageView
                android:id="@+id/img_logo"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_marginEnd="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="24dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/logo" />

            <EditText
                android:id="@+id/lbl_username_login"
                android:layout_width="360dp"
                android:layout_height="60dp"
                android:layout_marginEnd="24dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="50dp"
                android:background="@drawable/black_rectangular_border"
                android:backgroundTint="@color/colorWhite"
                android:ems="10"

                android:hint="Username"
                android:inputType="textPersonName"
                android:paddingLeft="16dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/img_logo" />

            <EditText
                android:id="@+id/lbl_password_login"
                android:layout_width="360dp"
                android:layout_height="60dp"
                android:layout_marginEnd="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/black_rectangular_border"
                android:backgroundTint="@color/colorWhite"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="16dp"
                app:layout_constraintHorizontal_bias="0.504"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lbl_username_login" />

            <TextView
                android:id="@+id/txt_forgot_password"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="20sp"
                android:layout_marginBottom="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="32dp"
                android:fontFamily="sans-serif-condensed"
                android:text="Forgot Password?"
                android:textColor="@color/colorWhite"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintLeft_toLeftOf="@+id/lbl_password_login"
                app:layout_constraintRight_toLeftOf="@+id/btn_login_login"
                app:layout_constraintTop_toBottomOf="@+id/lbl_password_login"
                app:layout_constraintVertical_bias="0.012" />

            <Button
                android:id="@+id/btn_login_login"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/black_buttons_design"
                android:text="Login"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                app:layout_constraintRight_toRightOf="@+id/lbl_password_login"
                app:layout_constraintTop_toBottomOf="@+id/lbl_password_login" />

            <TextView
                android:id="@+id/txt_no_account"
                android:layout_width="360dp"
                android:layout_height="45dp"
                android:layout_marginEnd="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginStart="24dp"
                android:layout_marginTop="100dp"
                android:gravity="center_vertical|center"
                android:text="Don't have account sign up?"

                android:textColor="@color/colorWhite"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/lbl_password_login" />

            <Button
                android:id="@+id/btn_register_login"
                android:layout_width="150dp"
                android:layout_height="60dp"
                android:layout_marginTop="8dp"
                android:background="@drawable/black_buttons_design"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="Register here"
                android:textSize="20sp"
                android:textAllCaps="false"
                android:textColor="@color/colorWhite"
                app:layout_constraintRight_toRightOf="@+id/btn_login_login"
                app:layout_constraintTop_toBottomOf="@+id/txt_no_account" />




        </android.support.constraint.ConstraintLayout>

    </ScrollView>

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="@+id/scroll_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="8dp"
        >

        <com.roughike.bottombar.BottomBar
            android:id="@+id/bottomBar"
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_gravity="bottom"
            android:background="@color/colorAppRed"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:bb_tabXmlResource="@xml/bottombar_tabs"
            app:bb_inActiveTabColor="@color/colorWhite"
            app:bb_activeTabColor="@color/colorWhite"

            />


    </android.support.constraint.ConstraintLayout>
</LinearLayout>

