<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.sonika.nepstra">

    <uses-sdk tools:overrideLibrary="com.paypal.android.sdk.payments" />
   <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity"
            android:windowSoftInputMode="stateHidden|adjustResize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DetailsActivity"
            android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity android:name=".OrderedProducts"
            android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity android:name=".RegisterActivity"
            android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity android:name=".LoginActivity"
            android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity android:name=".Navigations.Womens"
            android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity android:name=".Navigations.NewArrival"
            android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity android:name=".Navigations.ArtAndCraft"
            android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity android:name=".Navigations.Mens"
            android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity android:name=".Navigations.Jwellery"
            android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity android:name=".Navigations.Kids"
            android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity android:name=".Navigations.Sports"
            android:windowSoftInputMode="stateHidden|adjustResize"/>

        <activity android:name=".Paypal.ConfirmationActivity"
            android:windowSoftInputMode="stateHidden|adjustResize"/>
        <activity android:name=".Paypal.PaypalActivity"
            android:windowSoftInputMode="stateHidden|adjustResize"/>

    </application>

</manifest>