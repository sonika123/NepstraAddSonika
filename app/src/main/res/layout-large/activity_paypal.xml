<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.sonika.nepstra.Paypal.PaypalActivity"
    tools:layout_editor_absoluteY="25dp"
    tools:layout_editor_absoluteX="0dp">




    <Button
        android:id="@+id/buttonPay"
        android:text="Paypal "
        android:textColor="@color/colorAppWhite"
        android:layout_width="320dp"
        android:textSize="24sp"
        android:textAllCaps="false"
        android:background="@drawable/add_to_cart_button_design"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/txtPayVia"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/txtPayVia"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/txtPayVia" />
    <Button
        android:id="@+id/buttonbank"
        android:text="Direct Bank Transfer "
        android:textSize="24sp"
        android:textAllCaps="false"
        android:background="@drawable/add_to_cart_button_design"
        android:textColor="@color/colorAppWhite"
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonCash"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/buttonCash"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/buttonCash"
        app:layout_constraintHorizontal_bias="0.0" />
    <Button
        android:id="@+id/buttonCash"
        android:text="Cash on delivery "
        android:textSize="24sp"
        android:textAllCaps="false"
        android:textColor="@color/colorAppWhite"
        android:layout_width="320dp"
        android:background="@drawable/add_to_cart_button_design"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonPay"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="@+id/buttonPay"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="@+id/buttonPay" />

    <TextView
        android:id="@+id/txtPayVia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pay Via"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="240dp"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />


</android.support.constraint.ConstraintLayout>